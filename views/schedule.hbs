{{#if courses}}
<h2>Filter</h2>
<form method="GET" action="/">
    <div class="pure-g">
        {{#each courses}}
        <span class="pure-u-1-2 pure-u-md-1-4" style="color:{{this.color}}">
            <label for="{{this._id}}">
                <input type="checkbox" value="{{this._id}}" id="{{this._id}}" checked> {{this.name}}
            </label>
        </span>
        {{/each}}
    </div>

    <br />
    <input type="submit" value="Filter">
</form>
{{#if overdue}}
    <h2>Overdue</h2>
    <button id="collapseOverdue">Hide</button>
    <div id="overdue">
        {{#each overdue}}
            {{#each this}}
                {{#if @first}}
                    <h3>{{this}}</h3>
                    <div class="pure-g">
                {{else}}
                    <div class="assignment pure-u-1 pure-u-md-1-2 pure-u-lg-1-4" style="background-color:{{this.color}}">
                        <h4>{{this.title}}</h4>
                        <p>{{this.details}}</p>
                    </div>
                {{/if}}
            {{/each}}
        </div>
        {{/each}}
    </div>
    <hr />
{{/if}}
{{#if upcoming}}
    <h2>Upcoming</h2>
    <button id="collapseUpcoming">Hide</button>
    <div id="upcoming">
        {{#each upcoming}}
            {{#each this}}
                {{#if @first}}
                    <h3>{{this}}</h3>
                    <div class="pure-g">
                {{else}}
                    <div class="assignment pure-u-1 pure-u-md-1-2 pure-u-lg-1-4" style="background-color:{{this.color}}">
                        <h4>{{this.title}}</h4>
                        <p>{{this.details}}</p>
                    </div>
                {{/if}}
            {{/each}}
        </div>
        {{/each}}
    </div>
{{/if}}
{{else}}
    <a href="/courses">
        Add a course first!
    </a>
{{/if}}
