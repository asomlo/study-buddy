{{#if courses}}
    <h2>Add an assignment</h2>
    <form class="pure-form pure-form-aligned" action="/assignments" method="POST">
        <fieldset>
            <div class="pure-control-group">
                <label for="courseID">Class</label>
                <select name="courseID">
                {{#each courses}}
                    <option value={{this._id}}>{{this.name}}</option>
                {{/each}}
                </select>
            </div>
            <div class="pure-control-group">
                <label for="date">Due</label>
                <input type="date" name="date">
            </div>
            <div class="pure-control-group">
                <label for="title">Title</label>
                <input type="text" class="pure-input-1-2" placeholder="(required)" name="title">
            </div>
            <div class="pure-control-group">
                <label for="details">Details</label>
                <textarea class="pure-input-1-2" placeholder="(optional)" name="details"></textarea>
            </div>
            <div class="pure-controls">
                <button type="submit" class="pure-button pure-button-primary">Add assignment</button>
            </div>
        </fieldset>
    </form>
{{else}}
    <p>Add a course first!</p>
{{/if}}
<script src="assignments.js"></script>
